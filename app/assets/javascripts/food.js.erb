$(function(){
  init_food_tag();
});

function init_food_tag(){
  $(".food-tag").each(function(i,e){
    var $tag = $(e);
    var tag_id = $tag.attr('tag-id');
    set_food_tag({
      title: function(){
        return $("#popover_head_"+tag_id).html();
      },
      content: function(){
        return $("#popover_content_"+tag_id).html();
      },
      $target: $tag,
      click: function(){
        init_btn_submit(".watch_food_submit_"+tag_id);
      }
    });   
  })
}

function set_food_tag(option){
  option.$target.popover({
    container: "body",
    html: true,
    title: option.title,
    content: option.content
  }).click(option.click);
}
