<span class="content">
  <%= wrap(micropost.content) %>
  <% micropost.foods.each do |food| %>
    <%= render 'shared/food_tag', food: food %>
  <% end %>
  <br/>
  <% if micropost.original_id? %>
    <%= 
      link_to "Original: @" + micropost.original_post.user.name ,
              "#collapse#{micropost.id.to_s + page}",
              "data-toggle" => "collapse"
    %>   
    <div class="collapse" id="collapse<%= micropost.id.to_s + page %>" >
      <div class="row-fluid">
        <div class="img-polaroid img-rounded row-fluid span11" style="margin-top:3px;">
        <div class="span1">
          <%= gravatar_for micropost.original_post.user %>  
        </div>
        <div class="span11">
          <%= render 'shared/post_content', micropost: micropost.original_post,
                                            page: "original" %> 
        </div>
        </div>
        <div class="span1"></div>
      </div>
    </div>
  <% else %>
    <br/>
  <% end %>
  <% if page == "show" %> <br/> <% end %>
</span>


<% option = ["feed", "show", "share", "comment"]%>
<% if option.include?(page) %>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
<% end %>

<% option = ["feed", "show"] %>
<% if current_user?(micropost.user) && option.include?(page) %>
  <%= link_to "delete", micropost,
    method: :delete,
    data: { confirm: "You sure?" } %>
<% end %>
