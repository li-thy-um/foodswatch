<div class="post-action">
  <div class="btn-group btn-group-vertical"
       style="float:right; background:#DDD;"> 
    <%= render 'shared/post_action_btn', type: :watch_post, post: micropost %>
    <%= render 'shared/post_action_btn', type: :share, post: micropost %>
    <%= render 'shared/post_action_btn', type: :comment, post: micropost %>
  </div>
</div>

<% if signed_in? %>
  <%= render 'microposts/share_modal', micropost: micropost %>
<% else %>
  <%= render 'shared/sign_in_modal' %>
<% end %>
