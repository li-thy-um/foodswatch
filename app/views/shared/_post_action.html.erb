<div class="post-action">
  <!-- If not signed in, "share" icon should link to sign in modal. -->
  <% if signed_in?
       share_link = "#share_modal_#{micropost.id}"
       cmt_link = "#comment_collapse_#{micropost.id}"
       wtc_link = "##"
     else
       share_link = cmt_link = dtl_link = "#sign_in_modal"
     end
  %>
  <div class="btn-group btn-group-vertical" style="float:right;"> 
    <a href="<%= share_link %>" data-toggle="modal"
      title="Share" class="btn btn-share">
      <i class="icon-share"></i>
      <span class="badge"><%= micropost.share_count %></span>
    </a>
    <a href="<%= wtc_link %>" data-toggle="modal"
      title="Watch" class="btn btn-watch">
      <i class="icon-eye-open"></i>
      <span class="badge"><%= "#" %></span>
    </a>
    <a href="<%= cmt_link %>" data-toggle="collapse"
      title="Comment" class="btn btn-comment">
      <i class="icon-comment"></i>
      <span class="badge"><%= micropost.comments.count %></span>
    </a>
  </div>
</div>

<% if signed_in? %>
  <%= render 'microposts/share_modal',   micropost: micropost %>
<% else %>
  <%= render 'shared/sign_in_modal' %>
<% end %>
