<% micropost = Micropost.find_by_id(@container) %>
var post_id = "<%= @container %>";

// remove popover
$(".watch_post_btn_"+post_id).popover('destroy').remove();
$("#watch_post_popover_content_"+post_id).remove();

// render button
$(".post_action_panel_"+post_id).prepend(
  "<%= escape_javascript(render 'buttons/watch_post', post: micropost) %>"
);

//refresh watch_list
$("#watch_list").val("<%= current_user.watch_list_string %>");
